@{
}

@model List<CompanyViewModel>

<style>
    table {
        text-align: center;
    }

    .head {
        display: flex;
        justify-content: space-between;
    }
    .head a{
        float:right;
    }
</style>

<div class="head">
    <h3>Company List</h3>
    <a class="btn btn-success" asp-action="AddCompany">Add Company</a>

</div>

<hr></hr>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td><b>ID</b></td>
            <td><b>Name</b></td>
            <td><b>Location</b></td>
            <td><b>Actions</b></td>
        </tr>
    </thead>

    <tbody>
        @foreach (CompanyViewModel obj in Model)
        {
            <tr>
                <td>@obj.id</td>
                <td>@obj.name</td>
                <td>@obj.location</td>
                <td>
                    <a class="btn btn-warning" href="/Admin/job?id=@obj.id">View Job</a>&nbsp;&nbsp;
                    <button class="btn btn-primary">Edit</button>&nbsp;&nbsp;
                    <a class="btn btn-danger" onclick="getConfirmation('@obj.id')">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>


