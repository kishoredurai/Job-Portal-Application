@{
}


@model List<JobViewModel>

<style>
    table {
        text-align: center;
    }

    .head {
        display: flex;
        justify-content: space-between;
    }

        .head a {
            float: right;
        }
</style>

<div class="head">
    <h3>Job List</h3>
    <a class="btn btn-success" asp-action="AddJob">Add Job</a>
</div>

<hr></hr>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td><b>Job ID</b></td>
            <td><b>Job Title</b></td>
            <td><b>Job Salary</b></td>
            <td><b>Actions</b></td>
        </tr>
    </thead>

    <tbody>
        @foreach (JobViewModel obj in Model)
        {
            <tr>
                <td>@obj.id</td>
                <td>@obj.title</td>
                <td>@obj.salary</td>
                <td>
                    <button class="btn btn-primary">Edit</button>&nbsp;&nbsp;
                    <a class="btn btn-danger" onclick="getConfirmation('@obj.id')">Delete</a>
                </td>
            </tr>
        }
    </tbody>


</table>
